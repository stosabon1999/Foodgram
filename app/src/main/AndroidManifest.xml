<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.production.ssobolevsky.foodgram">

    <!-- To auto-complete the email text field in the login form with userEntityuser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".data.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme">
        <activity android:name=".presentation.activities.LoginActivity">
        </activity>
        <activity android:name=".presentation.activities.SignUpActivity">
        </activity>
        <activity
            android:name=".presentation.activities.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.FriendsActivity">
        </activity>
        <activity android:name=".presentation.activities.DialogActivity">
        </activity>
        <activity android:name=".presentation.activities.RecipesActivity">
        </activity>
        <activity android:name=".presentation.activities.FullScreenActivity">
        </activity>
    </application>

</manifest>